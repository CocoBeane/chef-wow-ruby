<% provide(:title, @user.name) %>
<ul class="nav nav-tabs">
  <li class="nav-item"><%= link_to "Favorite Recipes", root_url, class: "nav-link" %></li>
  <% if current_user?(@user) %>
    <li class="nav-item"><%= link_to "Edit Profile", edit_user_path(@user), class: "nav-link" %></li>
  <% end %>
</ul>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>