<h1>Edit Recipe</h1>
<%= form_for @recipe, url: {action: "update"}, html: {class: "recipe_form"} do |field| %>
   <label for="recipe_name">Name:</label>
   <%= field.text_field :name, class: "form-control"%>
  <label for="ingredients">Ingredients:</label>
  <%= field.select(:ingredients, options_for_select(options_for_ingredients, selected_recipe_ingredients), {}, multiple: true, class: "form-control chosen") %>
  <%= field.submit "Save" %>
<% end %>